CC=gcc -o

ifdef OPT
CFLAGS=-O2 -ansi -pedantic -W -Wall -fomit-frame-pointer -c
else
CFLAGS=-ggdb3 -ansi -pedantic -W -Wall -c
endif

LINK=gcc -o

ifdef OPT
LINKFLAGS=-O2
LIBS= ../../tl/opt/libtl.a
else
LINKFLAGS=-g
LIBS= ../../tl/bin/libtl.a
endif

SYSLIBS=-lm
OBJECTS= main.o boot.o echo.o

all : lecho

clean :
	-rm *.o
	-( if [ -f lecho ] ; then rm lecho ; fi )

lecho : makefile-freebsd $(OBJECTS) $(LIBS)
	-( if [ -f lecho ] ; then rm lecho ; fi )
	$(LINK) lecho $(LINKFLAGS) $(OBJECTS) $(LIBS) $(SYSLIBS)

%.o : ../c/%.c ../c/%.h makefile-freebsd
	$(CC) $@ $(CFLAGS) -I ../c -I../../tl/c/ $<
